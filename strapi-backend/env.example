# Server Configuration
HOST=0.0.0.0
PORT=1337
APP_KEYS="toBeModified1,toBeModified2"
API_TOKEN_SALT=toBeModified
ADMIN_JWT_SECRET=toBeModified
TRANSFER_TOKEN_SALT=toBeModified

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d

# Database Configuration (Development - SQLite)
DATABASE_CLIENT=sqlite
DATABASE_FILENAME=.tmp/data.db

# Database Configuration (Production - PostgreSQL)
# DATABASE_CLIENT=postgres
# DATABASE_NAME=strapi_db
# DATABASE_HOST=localhost
# DATABASE_PORT=5432
# DATABASE_USERNAME=strapi
# DATABASE_PASSWORD=strapi_password
# DATABASE_SSL=false

# Treblle Configuration
TREBLLE_API_KEY=your_treblle_api_key_here
TREBLLE_PROJECT_ID=your_treblle_project_id_here

# AI/LLM Configuration
# Option 1: Ollama (Local)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# Option 2: OpenAI Compatible API
# OPENAI_API_KEY=your_openai_api_key_here
# OPENAI_BASE_URL=https://api.openai.com/v1
# OPENAI_MODEL=gpt-3.5-turbo

# N8n Integration
N8N_WEBHOOK_URL=http://localhost:5678/webhook/api-analysis
N8N_API_KEY=your_n8n_api_key_here

# Security Configuration
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000
ENABLE_CORS=true
CORS_ORIGIN=http://localhost:3000,http://localhost:8080

# Performance Configuration
ENABLE_COMPRESSION=true
ENABLE_RESPONSE_CACHE=true
CACHE_TTL=300

# Environment
NODE_ENV=development

# Webhook Security
WEBHOOK_SECRET=your_webhook_secret_here

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=application/json,text/yaml,text/plain